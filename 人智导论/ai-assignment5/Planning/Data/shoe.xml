<?xml version="1.0" encoding="GBK" ?>
<PLANNING>
  <GOAL>
       <PREDICATE NAME="RightShoeOn" POLARITY="true" />
       <PREDICATE NAME="LeftShoeOn" POLARITY="true"/> 
  </GOAL>

<!--动作列表-->
  <ACTIONS>
      <ACTION NAME="RightShoe" >
              	<PRECONDITION>
                	     <PREDICATE NAME="RightSockOn" POLARITY="true" />	
               	</PRECONDITION>
             	<EFFECT>
            	     <PREDICATE NAME="RightShoeOn" POLARITY="true"/>               
             	</EFFECT>
       </ACTION>

       <ACTION NAME="RightSock" >
            	<PRECONDITION />
            	<EFFECT>
                        <PREDICATE NAME="RightSockOn" POLARITY="true"/>
              	</EFFECT>
       </ACTION>

<!--左侧动作-->
 <ACTION NAME="LeftShoe" >
              	<PRECONDITION>
                	     <PREDICATE NAME="LeftSockOn" POLARITY="true"/>
               	</PRECONDITION>
             	<EFFECT>
            	     <PREDICATE NAME="LeftShoeOn" POLARITY="true"/>
             	</EFFECT>
       </ACTION>

       <ACTION NAME="LeftSock" > 	
            	<PRECONDITION />
            	<EFFECT>
                        <PREDICATE NAME="LeftSockOn" POLARITY="true"/>
              	</EFFECT>
       </ACTION>    
</ACTIONS>

</PLANNING>
